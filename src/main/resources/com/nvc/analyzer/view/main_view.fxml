<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nvc.analyzer.controller.MainController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="NVC Conflict Analyzer">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="Describe the situation using the 4 steps of NVC:" />

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="1. Observation (What actually happened? No judgment.)" style="-fx-font-weight: bold;"/>
        <TextField fx:id="observationField" promptText="e.g., 'You left your socks on the floor'" />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="2. Feeling (How do you feel about it?)" style="-fx-font-weight: bold;"/>
        <TextField fx:id="feelingField" promptText="e.g., 'annoyed'" />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="3. Need (What do you need that caused this feeling?)" style="-fx-font-weight: bold;"/>
        <TextField fx:id="needField" promptText="e.g., 'order and cleanliness'" />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="4. Request (What concrete action would you like?)" style="-fx-font-weight: bold;"/>
        <TextField fx:id="requestField" promptText="e.g., 'Would you be willing to put them in the laundry?'" />
    </VBox>

    <Button text="Analyze &amp; Construct Sentence" onAction="#handleAnalyze" maxWidth="Infinity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>

    <Label text="Result:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="resultArea" editable="false" wrapText="true" prefHeight="100.0" style="-fx-control-inner-background: #f4f4f4;"/>

</VBox>